<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controllers.OcrActivity"
    android:weightSum="1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="40sp"
            android:background="#FFFFFF">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Button"
                android:id="@+id/button"/>

            <!-- src image -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#e4e3e3"
                android:id="@+id/srcContainer">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/srcImage"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:background="#dedede"
                    android:textColor="#a3a3a3" />
            </RelativeLayout>

            <!-- test image -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#e4e3e3">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/testImage"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:background="#dedede"
                    android:textColor="#a3a3a3" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#e4e3e3">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/testImage2"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:background="#dedede"
                    android:textColor="#a3a3a3" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#e4e3e3">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/testImage3"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:background="#dedede"
                    android:textColor="#a3a3a3" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#e4e3e3">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/testImage4"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:background="#dedede"
                    android:textColor="#a3a3a3" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#888888"
                android:layout_margin="0dp">

                <TextView
                    android:id="@+id/title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="#FFFFFF"
                    android:fontFamily="@font/b_regular"
                    android:textAppearance="@style/customFontstyle"
                    android:lineSpacingExtra="10sp"
                    android:gravity="center"
                    android:paddingBottom="20sp"
                    android:textIsSelectable="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#888888"
                android:layout_margin="0dp">

                <TextView
                    android:id="@+id/body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="#FFFFFF"
                    android:fontFamily="@font/b_regular"
                    android:textAppearance="@style/customFontstyle"
                    android:lineSpacingExtra="10sp"
                    android:gravity="left"
                    android:textIsSelectable="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#888888"
                android:layout_margin="0dp">

                <TextView
                    android:id="@+id/pageNumber1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="#FFFFFF"
                    android:fontFamily="@font/b_regular"
                    android:textAppearance="@style/customFontstyle"
                    android:lineSpacingExtra="10sp"
                    android:gravity="center"
                    android:paddingTop="20sp"
                    android:textIsSelectable="true"/>

            </RelativeLayout>


            <!--<RelativeLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="#888888"-->
                <!--android:layout_margin="0dp">-->

                <!--<TextView-->
                    <!--android:id="@+id/ocrText2"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_centerHorizontal="true"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:background="#888888"-->
                    <!--android:fontFamily="@font/b_regular"-->
                    <!--android:textAppearance="@style/customFontstyle"-->
                    <!--android:lineSpacingExtra="10sp"/>-->
            <!--</RelativeLayout>-->

        </LinearLayout>
    </ScrollView>

</LinearLayout>